@import "../static.styl"

listHeight = spacing4x

#view-header
  height: headerHeight
  padding: 0 spacing2x
  box-sizing: border-box
  background-color: colorGrayDark
  color: colorWhite

  & h2
    display: inline-block
    margin: 0
    line-height: headerHeight

    & a
      color: colorWhite
      font-size: fontSize3
      line-height: lineHeight3

      &:hover
        text-decoration: none

  & #header-left
    float: right
    vertical-align: top


#view-header .header-section
  position: relative
  display: inline-block
  height: headerHeight
  padding: 0 spacing5x
  line-height: headerHeight
  vertical-align: top

  &.header-link a
    color: colorWhite
    text-decoration: none

    &:hover
      text-decoration: underline

    &:active
      color: colorWhite


.header-dropdown
  &:hover ul
    height: (listHeight * 5)

  & .title
    width: 100%
    cursor: default

  & ul
    position: absolute
    top: 80%
    left: 0
    height: 0px
    margin: 0
    padding: 0
    list-style: none
    overflow: hidden
    transition: 0.1s linear height

    & li
      height: listHeight
      line-height: listHeight
      padding: 0 spacing2x
      text-align: center
      background-color: colorGrayLight

      &:hover
        filter: brightness(1.1)

      & a
        color: colorBlackDark
        text-decoration: none
