@import "../static.styl"

column1Width = propUnit4x
column2Width = propUnit6x
columnSpacing = spacing4x

colorHighlight = colorPurple

#contact-section-interested
  & li
    display: block
    list-style: none

#interest-modal
  width: propUnit16x + spacing8x
  height: propUnit12x + spacing8x
  padding: spacing4x
  box-sizing: border-box

  @media screen and (max-width: mediaWidth1)
    width: 100%
    height: propUnit16x

  & h1
    margin: 0
    line-height: lineHeight1
    font-size: fontSize1
    color: colorPrimary

  #interest-headers
    margin-top: spacing2x
    border-bottom: 1px solid colorGrayLight

    @media screen and (max-width: mediaWidth1)
      height: 0px
      overflow: hidden

    & .header
      display: inline-block
      margin-right: columnSpacing
      line-height: propUnit1x
      font-size: fontSize0
      color: colorPrimary

      &.class-name
        margin-left: (spacing2x + 5px)
        width: column1Width
      &.times
        width: column2Width

      &.start-date
        margin: 0

  #interest-view
    position: relative
    width: 100%
    height: propUnit8x
    overflow-y: scroll

    @media screen and (max-width: mediaWidth1)
      height: propUnit10x

    & h2
      margin: spacing3x 0
      padding-left: 20px
      font-size: fontSize0
      font-weight: normal
      background-color: colorPrimary
      color: colorWhite

    & ul
      margin: spacing2x 0
      padding: 0

    & li
      margin-bottom: spacing4x
      list-style: none
      font-size: fontSize0

      &:last-child
        margin-bottom: 0
      &.highlight
        color: colorHighlight

      & .class-info
        display: inline-block
        vertical-align: top

        & div
          display: inline-block
          vertical-align: top
          line-height: lineHeight0

          @media screen and (max-width: mediaWidth1)
            display: block
            width: 100%
            margin: 0

      & input
        display: inline-block
        position: relative
        top: 1px
        margin: 0 spacing1x 0 0
        cursor: pointer

      & .class-name
        width: column1Width
        margin-right: columnSpacing

      & .times
        width: column2Width
        margin-right: columnSpacing

      & .warning
        color: red

      & span
        margin-right: spacing1x
        vertical-align: middle

        @media screen and (min-width: mediaWidth1)
          display: none

      & .start-date
        @media screen and (max-width: mediaWidth1)
          display: inline-block !important
          width: unset !important


  & .selected-line
    float: left
    margin-top: spacing2x
    font-size: fontSize0
    line-height: lineHeight0

    &.highlight
      color: colorHighlight

  & button.btn-done
    float: right
    margin-top: spacing2x
