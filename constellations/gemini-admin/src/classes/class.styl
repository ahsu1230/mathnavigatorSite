@import "../static.styl"

#view-class
  width: 100%
  padding: 0 spacing2x
  box-sizing: border-box

  & h1
    display: inline-block
    margin: spacing4x 0
    line-height: lineHeight3
    font-size: fontSize3

  #footer
    margin-top: spacing4x

    & button
      padding: 0.75em
      border-radius: 10px
      color: white
      background-color: colorTurquoise

    #add-class
      color: white
      text-decoration: none

    #publish
      position: absolute
      right: 0
      display: inline-block
      width: 440px
      padding-right: spacing2x

      & p
        display: inline-block
        margin: 0
      
      & button
        vertical-align: top
        float: right
        text-align: middle
