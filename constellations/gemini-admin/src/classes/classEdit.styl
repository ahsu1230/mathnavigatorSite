@import "../static.styl"

#view-class-edit
  position: relative
  width: 100%
  padding: 0 spacing4x
  box-sizing: border-box

  & h2
    margin: spacing4x 0 0
  & h3
    margin: spacing2x 0

    &.avalibility
      padding-top: spacing2x
      border-top: 1px solid

    &.class-id
      color: colorTurquoise

  & .edit-section
    padding: spacing4x 0
    border-bottom: 1px solid colorGrayLight

  & input
    width: 100%
    height: spacing3x
    box-sizing: border-box
    font-size: fontSize0

  & select
    width: spacing20x
    margin: spacing2x 0 spacing4x
    font-size: fontSize0

  & .buttons
    margin-top: spacing2x
    margin-bottom: spacing8x

    &.upper-right
      position: absolute
      top: spacing3x
      right: 0

      & button
        display: block
        float: none

        &.btn-cancel
          background-color: transparent

    & button
      outline: none
      border: none
      border-radius: 6px
      padding: spacing2x spacing4x
      font-size: fontSize0
      cursor: pointer

      &:hover
        filter: brightness(1.1)

    & .btn-save
      float: right
      background-color: colorTurquoise
      color: colorWhite

    & .btn-cancel
      float: left
      background-color: colorGrayLight